            <tr>
                <th> Title </th>
                <th> Description </th>
                <th> Image </th>
                <th> Quantity</th>
                <th> Prix </th>
            </tr>
        </thead>

        <tbody>
            <% @cart_items.each do |i| %>
                <tr>
                    <td> <%= i.item.title%> </td>
                    <td> <%= i.item.description %> </td>
                    <td> <%= image_tag 'sleepcutecat.jpg', width: 50, class: '' %></td>
                    <td> <%= i.quantity %></td>
                    <td> <%= number_to_currency i.item.price, unit: "â‚¬", separator: ",", format: "%n%u" %> </td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% else %>
    <h3>No items</h3>
<% end %>

    </div>
    </div>
</div>