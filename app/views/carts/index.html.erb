<br>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h1> Contenu du panier</h1>

            <% if @cart_items %>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th> Title </th>
                        <th> Description </th>
                        <th> Image </th>
                        <th> Quantity</th>
                        <th> Prix </th>
                    </tr>
                </thead>

                <tbody>
                    <% @cart_items.each do |i| %>
                    <tr>
                        <td> <%= i.item.title%> </td>
                        <td> <%= i.item.description %> </td>
                        <td> <%= image_tag 'sleepcutecat.jpg', width: 50, class: '' %></td>
                        <td> <%= i.quantity %></td>
                        <td> <%= number_to_currency i.item.price, unit: "€", separator: ",", format: "%n%u" %> </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            <% else %>
            <h3>No items</h3>
            <% end %>
            </tbody>
            </table>

            <br>

            <h3>Total des produits achetés</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th> Description </th>
                        <th> Quantité</th>
                        <th> Prix</th>
                    </tr>
                <thead>

                <tbody>
                    <tr>
                        <td> Total </td>
                        <td> <%= @quantity_total %> </td>
                        <td> <%= number_to_currency @price_total, unit: "€", separator: ",", format: "%n%u" %> </td>

                    </tr>
                </tbody>
            </table>

            <%= link_to 'Passer commande', '', class: 'btn btn-primary float-right', style: 'margin-left: 5px' %> 
            <%= link_to 'Annuler commande', class: 'btn btn-danger float-right', method: 'delete' %>

        </div>
    </div>
</div>