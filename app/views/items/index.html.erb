<%= render 'carousel' %>

<br>

<div class="container">
  <div class="row">

  <% @item.each do |i| %>
    <div class="col-sm-4 mb-4">

      <div class="card h-100 shadow">
        <!-- <a href="#"><img class="card-img-top" src="./img/chat7.jpg" alt="" style="height:200px"></a> -->
        <a href="<%= item_path(i.id) %>"><%= image_tag 'sleepcutecat.jpg', width: '100%', class: ''  %></a>
        <div class="card-body" style="border-top:3px solid #ffc107;">
            <h4 class="card-title">
                <%= i.title %>
                <span class="float-right text-muted">$<%= i.price %></span>
            </h4>
            <p class="card-text"><%= i.description %></p>
            <%= form_tag carts_path, method: "post" do %>
              <div class="form-row">
                <div class="col">
                  <div class="input-group mb-2">
                    <div class="input-group-prepend">
                      <div class="input-group-text">Quantity</div>
                    </div>
                    <%= number_field_tag 'quantity', 1, :class => 'form-control' %>
                    <%= hidden_field_tag 'id', i.id %>
                  </div>
                </div>
              </div>
              <%= link_to 'Voir', item_path(i.id), class: "btn btn-primary" %>
              <%= submit_tag "Ajouter au panier", class: 'btn btn-outline-primary float-right' %>
            <% end %>
            <span class="entourer2">
                  <!--
                  <%= link_to 'Ajouter au panier', carts_path(:id => i.id), method: 'post', class: 'btn btn-outline-primary float-right' %>
                  -->
            </span>
        </div>
        <div class="card-footer">
            <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
        </div>
      </div>

    </div>
    <% end %>
  </div>
</div>
